<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/CardViewListRoomMargin"
    app:cardCornerRadius="@dimen/CardViewListRoomCardCornerRadius"
    app:cardElevation="@dimen/CardViewListRoomCardElevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/CardViewListRoomPaddingLinearlayout"
        android:background="@drawable/list_room_cardview_background">

        <TextView
            android:id="@+id/listRoomTxtRoomName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/listRoomScreenTextViewOfCardView"
            android:textSize="@dimen/CardViewListRoomTextSizeOfTextView"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>