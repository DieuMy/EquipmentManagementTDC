<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DetailReportScreenLinearlayout">
    <com.google.android.material.appbar.AppBarLayout style="@style/AppBarActionStyle">


        <androidx.appcompat.widget.Toolbar
            style="@style/ToolBarApp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left">
                <ImageView
                    android:id="@+id/detailMyWorkToolBarBack"
                    style="@style/ToolBarRightOfAppBar"
                    android:src="@drawable/ic_back" />
            </LinearLayout>

            <TextView
                style="@style/AppBarLayoutTextViewScreenName"
                android:text="@string/DetailReportScreenNameScreen" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <TextView
                    android:id="@+id/detailReportToolBarRight"
                    style="@style/ToolBarRightOfAppBar"
                    android:text="Hoàn tất sửa chữa"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <LinearLayout
            style="@style/DetailReportScreenLinearlayout">
            <LinearLayout style="@style/DetailReportScreen_Textview">

                <TextView
                    style="@style/DetailReportScreenTextview"
                    android:text="@string/DetailReportLabel_TimeBaoCao" />

                <TextView
                    android:id="@+id/detailMyWorkscreen_timebaocao"
                    style="@style/DetailReportScreenTextviewContent"
                    android:hint="@string/DetailReportContent_TimeBaoCao" />
            </LinearLayout>

            <LinearLayout style="@style/DetailReportScreen_Textview">

                <TextView
                    style="@style/DetailReportScreenTextview"
                    android:text="@string/DetailReportLabel_Masuco" />

                <TextView
                    android:id="@+id/detailMyWork_masuco"
                    style="@style/DetailReportScreenTextviewContent"
                    android:hint="@string/DetailReportContent_Masuco" />
            </LinearLayout>

            <LinearLayout style="@style/DetailReportScreen_Textview">

                <TextView
                    style="@style/DetailReportScreenTextview"
                    android:text="@string/DetailReportLabel_Maphong" />

                <TextView
                    android:id="@+id/ddetailMyWork_maphong"
                    style="@style/DetailReportScreenTextviewContent"
                    android:hint="@string/DetailReportContent_Maphong" />
            </LinearLayout>

            <LinearLayout style="@style/DetailReportScreen_Textview">

                <TextView
                    style="@style/DetailReportScreenTextview"
                    android:text="@string/DetailReportLabel_Mathietbi" />

                <TextView
                    android:id="@+id/detailMyWork_mathietbi"
                    style="@style/DetailReportScreenTextviewContent"
                    android:hint="@string/DetailReportContent_Mathietbi" />
            </LinearLayout>

            <LinearLayout style="@style/DetailReportScreen_Textview">

                <TextView
                    style="@style/DetailReportScreenTextview"
                    android:text="@string/DetailReportLabel_Manhanvien" />

                <TextView
                    android:id="@+id/detailMyWork_manhanvien"
                    style="@style/DetailReportScreenTextviewContent"
                    android:hint="@string/DetailReportContent_Manhanvien" />
            </LinearLayout>

            <LinearLayout style="@style/DetailReportScreen_Textview">

                <TextView
                    style="@style/DetailReportScreenTextview"
                    android:text="@string/DetailReportLabel_Tennhanvien" />

                <TextView
                    android:id="@+id/detailMyWork_tennhanvien"
                    style="@style/DetailReportScreenTextviewContent"
                    android:hint="@string/DetailReportContent_Tennhanvien" />
            </LinearLayout>

            <LinearLayout style="@style/DetailReportScreen_Textview">

                <TextView
                    style="@style/DetailReportScreenTextview"
                    android:text="@string/DetailReportLabel_Noidung" />

                <TextView
                    android:id="@+id/detailMyWork_noidung"
                    style="@style/DetailReportScreenTextviewContent"
                    android:hint="@string/DetailReportContent_Noidung" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detailReportLinnearLayoutLoiDaKhacPhuc"
                style="@style/DetailReportScreen_Textview"
                android:visibility="gone">

                <TextView
                    style="@style/DetailReportScreenTextview"
                    android:text="@string/DetailReportLabel_Loidakhacphuc" />

                <EditText
                    android:id="@+id/detailMyWork_loikhacphuc"
                    style="@style/DetailReportScreenTextviewContent"
                    android:hint="Nhập lỗi thực của thiết bị" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detailReportLinnearLayoutButton"
                style="@style/DetailReportScreen_Textview">

                <Button
                    android:id="@+id/detailMyWorkBtnTiepNhan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiếp nhận sửa chữa"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textColor="#FFF"
                    android:background="@drawable/login_screen_selector_btnlogin_btnforgetpassowrd"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>