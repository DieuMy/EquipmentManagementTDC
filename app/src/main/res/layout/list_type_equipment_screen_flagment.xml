<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ListEquipmentScreenLinearLayout"
    tools:context=".activities.TypeEquipmentActivity">

    <com.google.android.material.appbar.AppBarLayout style="@style/AppBarActionStyle">

        <androidx.appcompat.widget.Toolbar style="@style/ToolBarApp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left">
                <ImageView
                    android:id="@+id/editProfileToolBarBack"
                    style="@style/ToolBarRightOfAppBar"
                    android:src="@drawable/ic_back" />
            </LinearLayout>
            <TextView
                style="@style/AppBarLayoutTextViewScreenName"
                android:text="@string/ListEquipmentScreenNameScreen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">
                <ImageView
                    android:id="@+id/editProfileToolBarSave"
                    style="@style/ToolBarRightOfAppBar"
                    android:src="@drawable/ic_search" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:background="@drawable/list_equipment_screen_background"
        android:id="@+id/ListEquipmentScreenRecycleViewFunction"
        style="@style/ListEquipmentScreenRecycleView"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>