<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    style="@style/ReportMalfunctionLinerlayout">

    <com.google.android.material.appbar.AppBarLayout style="@style/AppBarActionStyle">

        <TextView
            style="@style/AppBarLayoutTextViewScreenName"
            android:text="@string/ReportMulfuntionScreenNameScreen" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/ReportMalfunctionConstraint_Linerlayout"
        android:layout_weight="1">

        <CheckBox
            android:id="@+id/reportmalfunctioncheckboxall"
            android:layout_width="106dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/ReportMulfuntionScreen_CheckboxAll"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        style="@style/ReportMalfunctionConstraint_Linerlayout"
        android:layout_weight="8"
        android:orientation="vertical">
        <CheckBox
            style="@style/ReportMalfunctionScreenCheckbox"
            android:text="@string/ReportMulfuntionScreen_CheckboxMouse"
            android:id="@+id/reportmalfunctioncheckboxmouse"/>
        <CheckBox
            style="@style/ReportMalfunctionScreenCheckbox"
            android:text="@string/ReportMulfuntionScreen_CheckboxKeyBoard"
            android:id="@+id/reportmalfunctioncheckboxkeyboard"/>
        <CheckBox
            style="@style/ReportMalfunctionScreenCheckbox"
            android:text="@string/ReportMulfuntionScreen_CheckboxPower"
            android:id="@+id/reportmalfunctioncheckboxpower"/>
        <CheckBox
            style="@style/ReportMalfunctionScreenCheckbox"
            android:text="@string/ReportMulfuntionScreen_CheckboxScreen"
            android:id="@+id/reportmalfunctioncheckboxscreen"/>
        <CheckBox
            style="@style/ReportMalfunctionScreenCheckbox"
            android:text="@string/ReportMulfuntionScreen_CheckboxSoftware"
            android:id="@+id/reportmalfunctioncheckboxsoftware"/>
        <EditText
            style="@style/ReportMalfunctionScreenEditText"
            android:hint="@string/ReportMulfuntionScreen_EdittextHintSoftware"
            android:id="@+id/reportmalfunctionedittextsoftware"/>
        <EditText
            style="@style/ReportMalfunctionScreenEditText"
            android:hint="@string/ReportMulfuntionScreen_EdittextHintOther"
            android:id="@+id/reportmalfuntionedittextother"/>
    </LinearLayout>
</LinearLayout>